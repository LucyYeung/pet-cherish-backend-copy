generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  username String @unique
  email    String @unique
  password String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Task {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  title  String @unique
  detail String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("tasks")
}
